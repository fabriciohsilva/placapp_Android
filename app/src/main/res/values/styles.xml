<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!--custom styles-->
    <style name="component_default_dimencsions">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="label" parent="component_default_dimencsions">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="input" parent="component_default_dimencsions">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="label_placar">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="button">
        <item name="android:textColor">@color/icons</item>
        <item name="android:background">@color/accent</item>
    </style>

    <style name="button_goal" parent="button">
    </style>

    <style name="button_start" parent="component_default_dimencsions">
        <item name="android:textColor">@color/icons</item>
        <item name="android:background">@color/accent</item>
        <!--<item name="android:layout_width">300dp</item>-->
    </style>

</resources>
